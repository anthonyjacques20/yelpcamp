<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		
		<h1 class="formHeader">Edit Comment%></h1>

		<div class="formDiv">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>

			<a href="/campgrounds">Back to the Campgrounds</a>
		</div>
	</div>
</div>
	
<%- include("../partials/footer") %>